<!DOCTYPE html>
<html>
<head>
	<title>T10b</title>
</head>
<body>
	<script type="text/javascript">
		var strA = "12344adc 134";
		function calcDig(stringA){
			var counter = 0;
			for(var C =0;C<strA.length;C++){
				if(!isNaN(strA.charAt(C)){
					counter ++;
				}
			}
			return counter;
		}
		document.write("<h2>Input string : " + strA + "</h2>");
		document.write("<h2>No. of digits in the string: " + calcDig(strA) + "</h2>");

	</script>

</body>
</html>